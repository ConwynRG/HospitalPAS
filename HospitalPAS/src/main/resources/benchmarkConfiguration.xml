<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark xmlns="https://timefold.ai/xsd/benchmark" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://timefold.ai/xsd/benchmark https://timefold.ai/xsd/benchmark/benchmark.xsd">
    <benchmarkDirectory>local/benchmarkReport</benchmarkDirectory>

    <inheritedSolverBenchmark>
        <solver>
            <environmentMode>REPRODUCIBLE</environmentMode>
            <!-- Define the model -->
            <solutionClass>lv.lu.df.combopt.domain.PatientAdmissionSchedule</solutionClass>
            <entityClass>lv.lu.df.combopt.domain.BedDesignation</entityClass>

            <!-- Define the score function -->
            <scoreDirectorFactory>
                <constraintProviderClass>lv.lu.df.combopt.solver.PatientAdmissionScheduleConstraintProvider</constraintProviderClass>
            </scoreDirectorFactory>

            <!-- Configure the optimization algorithms (optional) -->
            <termination>
                <unimprovedSecondsSpentLimit>10</unimprovedSecondsSpentLimit>
            </termination>

            <constructionHeuristic />
        </solver>
        <problemBenchmarks>
            <solutionFileIOClass>lv.lu.df.combopt.domain.PatientAdmissionScheduleJsonIO</solutionFileIOClass>
            <writeOutputSolutionEnabled>true</writeOutputSolutionEnabled>
            <inputSolutionFile>data/testData.json</inputSolutionFile>
            <inputSolutionFile>data/testData200.json</inputSolutionFile>
            <inputSolutionFile>data/testData500.json</inputSolutionFile>
            <inputSolutionFile>data/testData1000.json</inputSolutionFile>
        </problemBenchmarks>
        <!--<subSingleCount>5</subSingleCount>-->
    </inheritedSolverBenchmark>

    <solverBenchmark>
        <name>Tabu 5 500</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                    <swapMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <valueTabuSize>5</valueTabuSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>500</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>
    <solverBenchmark>
        <name>Tabu 10 1000</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                    <swapMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <valueTabuSize>10</valueTabuSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>1000</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>
    <solverBenchmark>
        <name>LAHC 400</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                    <swapMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <lateAcceptanceSize>400</lateAcceptanceSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>1</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>
    <solverBenchmark>
        <name>LAHC 1000 10</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                    <swapMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <lateAcceptanceSize>1000</lateAcceptanceSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>10</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>
    <solverBenchmark>
        <name>Simulated Annealing (100hard-1100soft) 500</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                    <swapMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <simulatedAnnealingStartingTemperature>100hard/1100soft</simulatedAnnealingStartingTemperature>
                </acceptor>
                <forager>
                    <acceptedCountLimit>500</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>

    <solverBenchmark>
        <name>Simulated Annealing (200hard-2000soft) 1000</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                    <swapMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <simulatedAnnealingStartingTemperature>200hard/2000soft</simulatedAnnealingStartingTemperature>
                </acceptor>
                <forager>
                    <acceptedCountLimit>1000</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>


</plannerBenchmark>